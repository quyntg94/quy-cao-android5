<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_weight"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_height"
        android:layout_below="@+id/et_weight"
        android:layout_alignStart="@+id/et_weight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Weight"
        android:id="@+id/tv_weight"
        android:layout_above="@+id/et_height"
        android:layout_toStartOf="@+id/et_weight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Height"
        android:id="@+id/tv_height"
        android:layout_alignBottom="@+id/et_height"
        android:layout_toStartOf="@+id/et_weight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="kg"
        android:id="@+id/textView"
        android:layout_above="@+id/et_height"
        android:layout_toEndOf="@+id/et_weight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="cm"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/tv_height"
        android:layout_toEndOf="@+id/et_height" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate BMI"
        android:id="@+id/btn_calculate_bmi"
        android:layout_below="@+id/tv_height"
        android:layout_toEndOf="@+id/tv_height"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_bmi_result"
        android:text="Your BMI"
        android:layout_below="@+id/btn_calculate_bmi"
        android:layout_alignStart="@+id/tv_height"
        android:layout_marginTop="37dp" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <ImageView
                android:id="@+id/ivcen"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/censored"
                android:layout_alignBottom="@+id/iv1">

            </ImageView>

            <TextView
                android:id="@+id/tvcen"
                android:text="Night dress \navailable in many colors"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@+id/ivcen"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/ivcencast"
                android:background="@color/lightRed"
                android:padding="10dp"
                android:layout_alignBottom="@+id/ivcen"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="30dp" />

            <ImageView
                android:id="@+id/ivcen1"
                android:layout_alignBottom="@+id/ivcen"
                android:layout_marginBottom="15dp"
                android:layout_toLeftOf="@+id/ivcen2"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/ivcen2"
                android:layout_alignBottom="@+id/ivcen"
                android:layout_marginBottom="15dp"
                android:layout_toLeftOf="@+id/ivcen3"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/ivcen3"
                android:layout_alignBottom="@+id/ivcen"
                android:layout_marginBottom="15dp"
                android:layout_alignRight="@+id/ivcen"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv1"
                android:layout_below="@+id/iv1"
                android:text="Colors"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/llcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv1"
                >

                <ImageView
                    android:id="@+id/iv21"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/iv22"
                    android:layout_marginRight="20dp"
                    />
                <ImageView
                    android:id="@+id/iv22"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="50dp"/>
                <ImageView
                    android:id="@+id/iv23"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="50dp"/>
                <ImageView
                    android:id="@+id/iv24"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/iv23"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv2"
                android:layout_below="@+id/llcolor"
                android:text="Sizes"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/llsize"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/tv2"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/iv31"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/iv32"
                    android:layout_marginRight="20dp"
                    />
                <ImageView
                    android:id="@+id/iv32"
                    android:background="@drawable/circle"
                    android:padding="5dp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/iv33"
                    android:paddingRight="20dp"
                     />
                <ImageView
                    android:id="@+id/iv33"
                    android:layout_width="wrap_content"
                    android:paddingLeft="30dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:id="@+id/iv34"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/iv33"
                    android:layout_marginLeft="20dp"/>
            </RelativeLayout>

            <Button
                android:id="@+id/bt4"
                android:layout_below="@+id/llsize"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:text="Add to cart"
                android:textColor="@color/white"
                android:background="@color/lightRed"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv3"
                android:text="Available within 2-4 business days Express -Delivery \navailable"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_below="@id/bt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textSize="18dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/tv3"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv5"
                android:text="- various leather applications and patches.\n- Rib knit cuffs and hem.\n- Contains non-textile parts of animal origin\n- Length: medium"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_below="@id/tv4"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green">

    <TextView
        android:id="@+id/tv_payment"
        android:text="Payment successful"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        android:paddingTop="20dp"
        android:layout_gravity="center_vertical"
        android:paddingLeft="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_money"
        android:text="40.00 $"
        android:layout_below="@+id/tv_payment"
        android:paddingTop="20dp"
        android:paddingLeft="70dp"
        android:textSize="40dp"
        android:textColor="#72000000"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_note"
        android:text="NOTE"
        android:layout_below="@+id/tv_name"
        android:paddingTop="20dp"
        android:paddingLeft="70dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_content"
        android:text="It was a humorously perilous \nbusiness for both of us"
        android:layout_below="@+id/tv_note"
        android:paddingTop="10dp"
        android:paddingLeft="70dp"
        android:textSize="20dp"
        android:textColor="#72000000"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_recepient"
        android:text="RECEPIENT"
        android:layout_below="@+id/tv_money"
        android:paddingTop="20dp"
        android:paddingLeft="70dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_name"
        android:text="Lester Nygaard"
        android:layout_below="@+id/tv_recepient"
        android:paddingTop="10dp"
        android:paddingLeft="70dp"
        android:textSize="25dp"
        android:textColor="#72000000"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/imb"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="fitXY"
        android:layout_marginTop="50dp"
        android:background="@color/green"
        android:layout_marginLeft="70dp"
        android:layout_below="@+id/tv_content"
        android:src="@drawable/ic_check_circle_white_24dp"/>
</RelativeLayout>
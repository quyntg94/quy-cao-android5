<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tv_amount"
        android:text="Amount"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_amout"
        android:layout_toRightOf="@+id/tv_amount"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:drawableRight="@drawable/ic_attach_money_white_24dp"/>
    <TextView
        android:id="@+id/tv_sendTo"
        android:text="Send to"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:layout_below="@id/et_amout"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_sendTo"
        android:layout_toRightOf="@+id/tv_sendTo"
        android:layout_below="@id/et_amout"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
    <TextView
        android:id="@+id/tv_note"
        android:text="Note"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:layout_below="@id/et_sendTo"
        android:padding="20dp"
        android:layout_width="110dp"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_note"
        android:layout_toRightOf="@+id/tv_note"
        android:layout_below="@id/et_sendTo"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
</RelativeLayout>